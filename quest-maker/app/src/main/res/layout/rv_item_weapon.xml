<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/RV_item_TV_weapon_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/RV_item_TV_weapon_damage_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/RV_item_TV_weapon_handed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/RV_item_TV_weapon_prefstat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/RV_item_TV_weapon_damage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/RV_item_TV_weapon_speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/RV_item_TV_weapon_speed_equip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/RV_item_TV_weapon_hit_chance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/RV_item_TV_weapon_throw_damage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/RV_item_TV_weapon_sell_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/RV_item_TV_weapon_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textSize="18sp" />


    </LinearLayout>

</androidx.cardview.widget.CardView>